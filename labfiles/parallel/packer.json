{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "us-east-1",
            "instance_type": "t2.micro",
            "ami_name": "bookapp-{{timestamp}}",
            "ami_description": "Landing page for book application",
            "tags": {
                "Builder": "Packer",
                "Role": "Web",
                "Team": "Frontend"
            },
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "*ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
                    "root-device-type": "ebs"
                },
                "owners": ["099720109477"],
                "most_recent": true
            },
            "ssh_username": "ubuntu",
            "force_deregister": true,
            "force_delete_snapshot": true
        },
        {
            "type": "docker",
            "image": "ubuntu:bionic",
            "commit": true,
            "changes": [ "ENTRYPOINT [\"apache2ctl\", \"-D\", \"FOREGROUND\"]" ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "cloud-init status --wait"
            ],
            "only": ["amazon-ebs"]
        },
        {
            "type": "file",
            "source": "files/",
            "destination": "/tmp/"
        },
        {
            "type": "shell",
            "script": "scripts/init.sh"
        },
        {
            "type": "shell",
            "inline": [
                "sudo systemctl start apache2",
                "sudo systemctl enable apache2"
            ],
            "only": ["amazon-ebs"]
        }
    ],
    "post-processors": [
        [
            {
                "type": "docker-tag",
                "repository": "smartuser/packer-webapp",
                "tag": "latest",
                "only": ["docker"]
            }
        ]
    ]
}
